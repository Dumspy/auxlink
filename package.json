{
  "name": "auxlink",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.9",
      "@trpc/client": "^11.7.2",
      "@better-auth/expo": "^1.4.9",
      "drizzle-orm": "^0.45.1"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @auxlink/db db:push",
    "db:studio": "turbo -F @auxlink/db db:studio",
    "db:generate": "turbo -F @auxlink/db db:generate",
    "db:migrate": "turbo -F @auxlink/db db:migrate",
    "db:local": "turbo -F @auxlink/db db:local"
  },
  "dependencies": {
    "@auxlink/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@auxlink/config": "workspace:*",
    "@types/bun": "catalog:",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
